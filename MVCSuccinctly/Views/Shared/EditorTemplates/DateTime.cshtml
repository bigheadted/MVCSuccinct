@model DateTime? 

@Html.TextBox("", (Model.HasValue ? Model.Value.ToShortDateString() : 
"No date entered"), 

new { @class = "datePicker" })

<script>
    $(document).ready(function(){
        $(".datePicker").datepicker(
         {
             showOn: "button",
             gotoCurrent: true,
             showAnim: 'fold',
             buttonImage: "/Content/calendar.png",
             buttonImageOnly: true
         })

        });
     </script>





